// $pop
// Uma maneira simples de remover o ultimo ou o primeiro item do array
// sintaxe: { $pop: { items: -1|1 } }
// -1 primeiro item, 1 ultimo item

use('conteudo_trybe');

db.fruits.updateOne(
  { "_id": 100},
  {
    $pop:{
      fornecedores: 1,
    }
  }
);

db.fruits.find();


